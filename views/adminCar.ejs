<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Cyber Cars</title>
</head>
<body>
    <%- include('partials/navbar', {
        nav: {
            login: '/admin/login',
            addCar: '/admin/car',
            addMnfctr: '/admin/manufacturer',
            cars: '/admin/car/update',
            manufacturers: '/admin/manufacturer/update',
            search: '/admin/search',
            users: '/admin/customerDetails',
            messages: '/admin/message',
            status: '/admin/carstatus'
        },
        active: 'addCar'
    }) %>
    <div class="container">
        <h2>Add a car</h2>
        <form action="/admin/car" method="POST">
            <div>
                <div class="label">
                    <label for="color">Car Color</label>
                </div>
                <input type="text" id="color" name="color" value="blue">
            </div>
            <div>
                <div class="label">
                    <label for="model">Car Model</label>
                </div>
                <input type="text" id="model" name="model" value="">
            </div>
            <div>
                <div class="label">
                    <label for="price">Car Price</label>
                </div>
                <input type="text" id="price" name="price" value="5000">
            </div>
            <div>
            <div class="label">
                <label for="stock">Stock</label>
            </div>
            <input type="text" id="stock" name="stock" value="100">
            </div>
            <div>
            <div class="label">
            <label for="engine">Engine Spec</label>
            </div>
                 <input type="text" id="engine" name="engine" value="true">
            </div>

            <div>
                <div class="label">
                    <label for="rangeKM">Range in KM</label>
                </div>
                <input type="text" id="rangeKM" name="rangeKM" value="120">
            </div>
            <div>
            <div class="label">
                <label for="braking">Braking Time for 100kmh</label>
               </div>
                <input type="text" id="braking" name="braking" value="5">
           </div>
           <div>    
                <div class="label">
                    <label for="maxSpeed">Max Speed</label>
                </div>
                <input type="text" id="maxSpeed" name="maxspeed" value="120">
            </div>

            <div>
            <div class="label">
                <label for="autoPilot">Auto Pilot Feature</label>
            </div>
            <input type="text" id="autoPilot" name="autoPilot" value="1">
            </div>

           <div>
           <div class="label">
               <label for="cameras">Cameras Option</label>
        </div>
        <input type="text" id="cameras" name="cameras" value="1">
         </div>
        <div>
         <div class="label">
            <label for="manufacturerID">ManufacturerID</label>
        </div>
        <input type="text" id="manufacturerID" name="manufacturerID" value="1">
         </div>
    
            <div>
                <button type="submit">Insert</button>
            </div>
        </form>
    </div>
</body>
</html>